<!doctype html>
<html lang="en">
  <head>
    <title>NOWFit - Transform Your Fitness</title>
<link rel="icon" type="image/png" href="/favicon.png">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
      :root {
        --primary: #0ea5a4;
        --dark: #0f172a;
      }

      body {
        background: linear-gradient(135deg, #f9fafb, #eef2ff);
        font-family: Inter, "Segoe UI", Roboto;
      }

      /* NAVBAR */
      .navbar {
        padding: 18px 0;
        background: white;
        box-shadow: 0 6px 20px rgba(0,0,0,0.05);
      }

      .navbar-brand {
        font-weight: 800;
        font-size: 28px;
        color: var(--dark);
      }

      /* HERO */
      .hero-title {
        font-size: 52px;
        font-weight: 800;
        color: var(--dark);
        line-height: 1.2;
      }

      .hero-sub {
        font-size: 20px;
        color: #4b5563;
        margin-top: 12px;
      }

      .btn-primary {
        background: var(--primary);
        border: none;
        padding: 12px 28px;
        border-radius: 12px;
        font-size: 17px;
        font-weight: 600;
        transition: 0.25s;
      }

      .btn-primary:hover {
        background: #0c8d8b;
        transform: translateY(-3px);
      }

      .btn-outline-primary {
        border-radius: 10px;
        padding: 10px 24px;
        font-weight: 600;
      }

      /* IMAGE */
      .hero-img {
        border-radius: 22px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.12);
      }

      @media (max-width: 768px) {
        .hero-title {
          font-size: 38px;
        }
      }
    </style>
  </head>

  <body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand" href="/">NOWFit</a>

        <div>
          <a class="btn btn-outline-primary me-2" href="/auth/login">Login</a>
          <a class="btn btn-primary" href="/auth/register">Register</a>
        </div>
      </div>
    </nav>

    <!-- HERO SECTION -->
    <main class="container py-5">
      <div class="row align-items-center">

        <!-- Left Text -->
        <div class="col-md-6 mb-4">
          <h1 class="hero-title">Train Smarter, Transform Faster</h1>
          <p class="hero-sub">Personalized workouts, real-time chat with coaches, custom diet plans â€” all in one platform.</p>

          <a href="/auth/register" class="btn btn-primary mt-4">Get Started</a>
        </div>



      </div>
    </main>

  </body>
</html>
