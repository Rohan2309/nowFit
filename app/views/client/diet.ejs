<!doctype html>
<html>
<head>
  <title>My Diet Plan</title>
<link rel="icon" type="image/png" href="/favicon.png">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f4f6f9;
      font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto;
    }

    .card {
      border-radius: 14px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.05);
      border: none;
    }

    .meal-card {
      border-radius: 10px;
    }

    .badge-cal {
      background: #0ea5a4;
      padding: 8px 12px;
      font-size: 13px;
      border-radius: 8px;
    }
  </style>
</head>

<body>

<div class="container py-5">

  <!-- Back -->
  <a href="/client/dashboard" class="btn btn-outline-secondary mb-4">← Back to Dashboard</a>

  <div class="card p-4">

    <!-- If no diet assigned -->
    <% if (!diet) { %>

      <h3>No Diet Assigned</h3>
      <p class="text-muted">Your coach has not assigned any diet plan yet.</p>

    <% } else { %>

      <!-- Header -->
      <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
          <h2 class="fw-bold"><%= diet.title %></h2>

          <p class="text-muted mb-1">
            Created by:
            <strong><%= diet.createdBy ? diet.createdBy.name : '—' %></strong>
          </p>
        </div>
      </div>

      <hr>

      <!-- Meals Section -->
      <h4 class="fw-bold mb-3">Meals</h4>

      <% if (diet.meals && diet.meals.length > 0) { %>

        <ul class="list-group mb-3">

          <% diet.meals.forEach(m => { %>

            <li class="list-group-item d-flex justify-content-between align-items-center meal-card">
              <div>
                <strong><%= m.meal %></strong>

                <div class="small text-muted">
                  Protein: <%= m.protein || 0 %>g • 
                  Carbs: <%= m.carbs || 0 %>g • 
                  Fats: <%= m.fats || 0 %>g
                </div>
              </div>

              <div>
                <span class="badge-cal text-white"><%= m.calories || 0 %> kcal</span>
              </div>
            </li>

          <% }) %>

        </ul>

      <% } else { %>

        <p class="text-muted">No meals added in this diet plan.</p>

      <% } %>

      <!-- Total Calories -->
      <hr>

      <p class="text-muted">
        Total Calories:
        <strong><%= diet.calories || 0 %> kcal</strong>
      </p>

    <% } %>

  </div>

</div>

</body>
</html>
