<!doctype html>
<html>
<head>
  <title>My Workout Plan</title>
<link rel="icon" type="image/png" href="/favicon.png">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f4f6f9;
      font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto;
    }

    .card {
      border-radius: 14px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.05);
      border: none;
    }

    .exercise-item {
      border-radius: 10px;
    }

    .badge-level {
      background: #0ea5a4;
      padding: 7px 12px;
      border-radius: 8px;
      font-size: 12px;
      color: white;
    }
  </style>
</head>

<body>

<div class="container py-5">

  <!-- Back -->
  <a href="/client/dashboard" class="btn btn-outline-secondary mb-4">← Back to Dashboard</a>

  <div class="card p-4">

    <!-- If no workout assigned -->
    <% if (!workout) { %>

      <h3>No Workout Assigned</h3>
      <p class="text-muted">Your coach has not assigned a workout plan yet.</p>

    <% } else { %>

      <!-- Header -->
      <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
          <h2 class="fw-bold"><%= workout.title %></h2>

          <span class="badge-level mb-2">Level: <%= workout.level %></span>

          <p class="text-muted mt-2 mb-1">
            Created by:
            <strong><%= workout.createdBy ? workout.createdBy.name : '—' %></strong>
          </p>
        </div>
      </div>

      <hr>

      <!-- Exercises Section -->
      <h4 class="fw-bold mb-3">Exercises</h4>

      <% if (workout.exercises && workout.exercises.length > 0) { %>

        <ul class="list-group">

          <% workout.exercises.forEach(e => { %>

            <li class="list-group-item exercise-item mb-2">
              <strong><%= e.name %></strong>
              <div class="small text-muted mt-1">
                Sets: <%= e.sets || '-' %> • 
                Reps: <%= e.reps || '-' %> • 
                Rest: <%= e.rest || '-' %>
              </div>
            </li>

          <% }) %>

        </ul>

      <% } else { %>

        <p class="text-muted">No exercises added to this workout.</p>

      <% } %>

    <% } %>

  </div>

</div>

</body>
</html>
